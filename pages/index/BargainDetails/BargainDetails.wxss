/* pages/index/BargainDetails/BargainDetails.wxss */

page {
  width: 100%;
  height: 100%;
  background: #f6f6f6;
}

.topBox {
  width: 100%;
  height: 400rpx;
  border-bottom-left-radius: 24rpx;
  border-bottom-right-radius: 24rpx;
}

/* 砍价时间、信息 */

.bargainBox {
  height: 500rpx;
  margin: 0 30rpx;
  transform: translateY(-336rpx);
  background: #fff;
  border-radius: 12rpx;
  text-align: center;
  box-sizing: border-box;
}

.countDown {
  padding-top: 40rpx;
}

.hour, .minute {
  display: inline-block;
  width: 36rpx;
  height: 36rpx;
  line-height: 36rpx;
  text-align: center;
}

.progress {
  margin-top: 62rpx;
  position: relative;
}

.progress::before {
  content: '';
  position: absolute;
  top: 12rpx;
  left: 174rpx;
  width: 50rpx;
  height: 6rpx;
  background: #ffb35d;
  border-radius: 4rpx;
}

.progress::after {
  content: '';
  position: absolute;
  top: 12rpx;
  right: 174rpx;
  width: 50rpx;
  height: 6rpx;
  background: #ffb35d;
  border-radius: 4rpx;
}

.inviteTxt {
  margin-top: 62rpx;
}

.progressBar {
  width: 560rpx;
  height: 24rpx;
  margin: 48rpx 66rpx 20rpx 66rpx;
  background: #fae6ee;
  border-radius: 12rpx;
  position: relative;
}

.cancelBar {
  width: 20%;
  height: 24rpx;
  border-radius: 12rpx;
  position: absolute;
  top: 0;
  left: 0;
}

.priceBox {
  margin: 0 62rpx 50rpx 62rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.alreadyBargain {
  color: #ffb45c;
  font-family: HiraginoSansGB-W3;
}

/* 邀请好友 */

.inviteFriend {
  height: 80rpx;
  line-height: 80rpx;
  margin: -272rpx 72rpx 20rpx 72rpx;
  border-radius: 40rpx;
  text-align: center;
}

.prePay {
  background: #ededed;
  margin-top: 0;
}

/* 砍价琅琊榜 */

.bargainList {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  margin-top: 52rpx;
  text-align: center;
  border-top: 2rpx solid #dedede;
  border-bottom: 2rpx solid #dedede;
  position: relative;
}

.listLeft {
  position: absolute;
  left: 42rpx;
  top: 44rpx;
  width: 244rpx;
  height: 2rpx;
}

.listLeft::after {
  content: '';
  position: absolute;
  top: -8rpx;
  right: 0;
  width: 2rpx;
  height: 20rpx;
  background: #fd6592;
}

.listRight {
  position: absolute;
  right: 42rpx;
  top: 44rpx;
  width: 244rpx;
  height: 2rpx;
}

.listRight::before {
  content: '';
  position: absolute;
  top: -10rpx;
  left: 0;
  width: 2rpx;
  height: 20rpx;
  background: #fd6592;
}

/* 砍价好友信息 */

.items {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 128rpx;
  margin: 0 30rpx;
  border-bottom: 2rpx solid #dedede;
}

.itemLeft {
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.headImg {
  width: 80rpx;
  height: 80rpx;
  background: #ccc;
  margin-right: 16rpx;
}

.friName {
  margin-bottom: 10rpx;
}

/* 底部 */

.footer {
  width: 100%;
  height: 192rpx;
  line-height: 192rpx;
  text-align: center;
  color: #3f4fa5;
}

/* 弹窗 */
button{
  padding: 0;
  margin: 0;
}
.modelCon {
  height: 600rpx;
  margin: 240rpx 76rpx auto 76rpx;
  background: #fff;
  border-radius: 12rpx;
  position: relative;
}

.closeBox {
  width: 104rpx;
  height: 104rpx;
  line-height: 104rpx;
  text-align: center;
  margin-left: 78rpx;
  position: absolute;
  top: 0;
  right: 0;
}

.closeIcon {
  width: 28rpx;
  height: 28rpx;
}

.statusIcon {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  width: 150rpx;
  height: 150rpx;
  /* background: #ccc; */
  margin: 82rpx auto 94rpx auto;
}

.statusTxt {
  position: absolute;
  top: 300rpx;
  left: 212rpx;
}

.colTxt {
  color: #ffb45c;
}

.already {
  position: absolute;
  top: 370rpx;
  left: 70rpx;
}

.btnList {
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: absolute;
  bottom: 50rpx;
  right: 42rpx;
  left: 42rpx;
}

.bargainBtn {
  width: 240rpx;
  height: 72rpx;
  line-height: 72rpx;
  text-align: center;

  border-radius: 36rpx;
  background: #fff;
}
.bor{
  border: 2rpx solid #fd6592;
}
.unbor{
  border: 2rpx solid #DEDEDE;
  color: #DEDEDE;
}

.payBtn {
  width: 240rpx;
  height: 72rpx;
  line-height: 72rpx;
  text-align: center;
  border-radius: 36rpx;
  border: 2rpx solid #fd6592;
}
