/* pages/index/birthdayWish/birthdayWish.wxss */
.container{
  background: #F6F6F6;
}
.bgImg{
  width: 100%;
  height: 400rpx;
  background: url(https://prise-picture.oss-cn-shenzhen.aliyuncs.com/20190417104022641825987.png) no-repeat;
  background-size: cover;
  box-sizing: border-box;
}
.wishBox{
  padding: 66rpx 0 0 50rpx;
}
.wishTitle{
  font-size: 36rpx;
  margin-bottom: 20rpx;
}
/* 选择生日 */
.conBox{
  height: 318rpx;
  margin: -208rpx 30rpx 0 30rpx;
  background: #fff;
  border-radius: 12rpx;
}
.headBox{
  display: flex;
  align-items: center;
  justify-content: flex-start;
  height: 180rpx;
  padding-top: 70rpx;
}
.headImg{
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  overflow: hidden;
  margin: 0 50rpx 0 42rpx;
}
.selectDate{
  font-size: 36rpx;
}
.userName{
  display: flex;
  justify-content: flex-end;
  align-items: flex-end;
  margin-right: 40rpx;
  font-size: 30rpx;
}
.isnull{
width: 100%;
height: 180rpx;
}
/* 填写愿望 */
.writeBox{
  min-height: 646rpx;
  margin: 20rpx 30rpx 0 30rpx;
  background: #fff;
  border-radius: 12rpx;
  /* padding-top: 284rpx; */
  box-sizing: border-box;
}
.writeBtnBox{
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
  padding-top: 284rpx;
}
.subBtn{
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  border: none;
  padding: 0 246rpx;
  font-size: 30rpx;
  text-align: center;
}
/* 填写愿望弹窗 */



.close {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 38rpx 0 52rpx 0;
  margin: 0 38rpx;
}

.closeIcon {
  width: 28rpx;
  height: 28rpx;
}

.modelTitle{
  font-size: 30rpx;
}
.area{
  width: auto;
  height: 468rpx;
  border: 1px solid #DEDEDE;
  border-radius: 4rpx;
  padding: 30rpx;
  margin: 0 36rpx;
  box-sizing: border-box;
  font-size: 26rpx;
}

.cancelBtn{
  margin: 58rpx 36rpx 28rpx 36rpx;
  height: 80rpx;
  border-radius: 40rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 30rpx;
}

/* 完整内容 */
.wishList{
  padding-top: 36rpx;
}
.wishItem{
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 80rpx;
  line-height: 80rpx;
  margin: 0 30rpx;
  border-bottom: 2rpx solid #DEDEDE;
  font-size: 28rpx;
}
.createTime{
  padding: 30rpx 0 0 36rpx;
}
/* 底部清空分享 */
.wishFooterBox{
  position: fixed;
  bottom: 0;
  left: 0;
  height: 128rpx;
  width: 100%;
  background: #fff;
  box-sizing: border-box;
}
.wishFooter{
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 128rpx;
  margin: 0 50rpx 0 70rpx;
}
.clearnWish{
  color: #666;
  font-size: 26rpx;
}
.shareWish{
  width: 240rpx;
  height: 72rpx;
  border-radius: 36rpx;
  font-size: 30rpx;
  text-align: center;
  line-height: 72rpx;
}
/* 编辑图标 */
.editItemBox{
    width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  background: #FFB45C;
}
.editIconBox{
  position: fixed;
  right: 50rpx;
  bottom: 142rpx;
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  background: #FFB45C;
}
.iconCenter{
  display: flex;
  align-items: center;
  justify-content: center;
  height: 72rpx;
}
.editIcon{
  width: 27rpx;
  height: 39rpx;
}